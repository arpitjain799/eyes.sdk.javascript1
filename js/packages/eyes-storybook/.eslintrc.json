{
    "root": true,
    "ignorePatterns":[
        "test/fixtures/appWithStorybook",
        "test/fixtures/heavyStorybook",
        "test/fixtures/singleStorybook",
        "test/fixtures/storybookCSF",
        "test/fixtures/storybook-versions",
        "test/fixtures/accessibilityStorybook",
        "test/fixtures/crossOriginIframeStorybook",
        "test/fixtures/jsLayoutStorybook",
        "test/fixtures/jsLayoutStorybookLocal",
        "test/fixtures/waitBeforeCapture",
        "test/fixtures/customFont",
        "test/fixtures/appWithCustomHttpHeaders",
        "test/fixtures/fakeIE",
        "test/fixtures/globalQueryParams",
        "test/fixtures/zeroStoriesRetry",
        "test/fixtures/perComponentStorybook",
        "dist",
        "logs",
        "test/fixtures/storybook-storyStore7",
        "test/fixtures/storybook-with-errors-with-version/",
        "test/fixtures/floatingRegionStorybook",
        "test/e2e/latest",
        "test/e2e/undefined"
    ],
    "env": {
        "commonjs": true,
        "es6": true,
        "node": true
    },
    "parserOptions": {
        "ecmaVersion": 2020,
        "sourceType": "module"
    },
    "extends": ["plugin:node/recommended"],
    "plugins": [
        "prettier",
        "mocha-no-only",
        "node"
    ],
    "parser": "babel-eslint",
    "rules": {
        "prettier/prettier": [
            "error",
            {
                "semi": true,
                "parser": "babel",
                "printWidth": 100,
                "singleQuote": true,
                "trailingComma": "all",
                "bracketSpacing": false,
                "jsxBracketSameLine": true
            }
        ],
        "no-process-exit": "off",
        "no-const-assign": "warn",
        "no-this-before-super": "warn",
        "no-undef": "warn",
        "no-unreachable": "warn",
        "no-unused-vars": ["warn", {"varsIgnorePattern": "^_", "args": "all", "argsIgnorePattern": "^_"}],
        "constructor-super": "warn",
        "valid-typeof": "warn",
        "mocha-no-only/mocha-no-only": "error",
        "node/exports-style": ["error", "module.exports"]
    }
}
